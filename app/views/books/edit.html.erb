<div class="container">
 <div class= "row">
  <div class= "col-sm-12 col-md-8 mx-auto">
 

<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>

<% if @book.errors.any? %>
   <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class= "form-group">
<h4>Title</h4>
 <%= f.text_field :title, class:"form-control" %>
 </div>
 
 <div class= "form-group">
<h4>Opinion</h4>
 <%= f.text_area :body, class:"form-control" %>
</div> 
 <br>
 <%= f.submit 'Update Book', class:"btn btn-success" %>
 <% end %>

<tbody>
<tr>
<th><%= link_to "Show", book_path(@book.id) %></th>
<th><%= link_to "Back", books_path %></th>
</tr>
</tbody>

</div>
</div>
</div>
