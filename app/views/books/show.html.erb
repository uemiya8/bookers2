<div class="container px5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/book', book: @books, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-invrse">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th></th>
            <th>
              <p>
                <%= link_to user_path(@book.user) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %><br>
                    <%= @book.user.name %>
                      <% end %>
              </p>
            </th>
            <th><span><%= link_to book_path(@book) do %>
    <%= @book.title %><% end %></span></th>
            <th><span><%= @book.body %></span></th>
            <th>
              <% if @book.user ==current_user %>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sn btn-success" %>
                  <% end %>
            </th>
            <th>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
                  <% end %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
