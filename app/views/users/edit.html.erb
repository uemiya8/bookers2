<div class = "container">
 <div class = "row">
  <div class = "col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
<h2>User info</h2>
<%= form_with model: @user do |f| %>

 <% if @user.errors.any? %>
   <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="form-group">
 <label>Name</label>
 <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
</div>

<div class="form-group">
 <label>lmage</label>
 <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %>
</div>
 
 <div class= "form-group">
<label>Introduction</label>
 <%= f.text_area :introduction, class: "form-control introduction" %>
 </div>
 
 <div class= "form-group">
 <br>
 <%= f.submit 'Update User', class:"btn btn-success" %>
 </div>
<% end %>

</div>
</div>
</div>