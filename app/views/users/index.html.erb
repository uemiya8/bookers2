<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <%= render 'book', book: @book, user: @user %>
   </div>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-invrse">
          <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th></th>
                <th>
                  <p>
                    <%= link_to user_path(user) do %>
                      <%= image_tag user.get_profile_image(100,100) %>
                        <% end %>
                  </p>
                </th>
                <th>
                  <%= user.name %>
                </th>
                <th>
                  <%= link_to "Show", user_path(user) %>
                </th>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>