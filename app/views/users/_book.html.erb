<h2>User info</h2>
<p>
  <%= image_tag user.get_profile_image(100,100) %>
</p>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th>
        <%= user.name %>
      </th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>
        <%= user.introduction %>
      </th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%=link_to edit_user_path(user),class: 'btn btn-outline-secondary btn-block' do %> <i class="fas fa-user-cog"></i>
    <% end %>
</div>
<h1>New book</h1>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
        <% end %>